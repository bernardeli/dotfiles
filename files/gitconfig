[user]
  email = ricardobcs@gmail.com
  name = Ricardo Bernardeli
[color]
  ui = auto
[alias]
  st = status
  s = status
  d = diff
  c = commit -m
  ci = commit -am
  co = checkout
  cp = cherry-pick
  l = log
  b = branch
  ri = rebase -i
  rim = rebase -i master
  amend = commit -a --amend --no-edit
  logtoday = log --since='6am' --pretty=format:'* %s' --author='Ricardo Bernardeli'
  logyesterday = log --since='yesterday' --before='today 6am' --pretty=format:'* %s' --author='Ricardo Bernardeli'
  assume   = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
  fp = "!f() { git symbolic-ref HEAD | cut -d \\/ -f3 ; }; git fetch ; git pull --rebase origin `f`"
  conflict = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; mvim -p `f`"
  next = "!git add . && git rebase --continue"
  discart = "!git add . && git checkout -f"
  aftermerge = "!f() { git checkout master && git pull --rebase && git remote prune origin && git branch -d $1; }; f"
  since-master = diff --name-only origin/master
  x = "!gitx"
  tree = log --oneline --decorate --graph --abbrev-commit
[core]
  excludesfile = /Users/ric/.gitignore
  ignorecase = false
  editor = /usr/bin/vim
[branch]
  autosetuprebase = always
[push]
  default = current
